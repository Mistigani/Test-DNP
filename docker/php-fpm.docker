FROM php:8.4-fpm

RUN apt-get update && apt-get install -y \
    firebird-dev \
    && docker-php-ext-install pdo_mysql \
    && pecl install redis \
    && docker-php-ext-enable redis

RUN docker-php-ext-configure exif
RUN docker-php-ext-install exif
RUN docker-php-ext-enable exif

WORKDIR /var/www